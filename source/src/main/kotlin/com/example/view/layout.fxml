<AnchorPane maxHeight="800" maxWidth="1200" minHeight="800" minWidth="1200" prefHeight="800" prefWidth="1200"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <AnchorPane prefHeight="1000" prefWidth="1200">
        <MenuBar fx:id="menuContainer" prefHeight="20" prefWidth="1200">
            <Menu mnemonicParsing="false" text="Построить граф">
                <MenuItem fx:id = "randomGraphBuildButton" mnemonicParsing="false" text="Случайный"/>
                <MenuItem fx:id = "buildGraphFromFileButton" mnemonicParsing="false" text="Из файла"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Добавить">
                <MenuItem fx:id="addVertexButton" mnemonicParsing="false" text="Вершину"/>
                <MenuItem fx:id="addEdgeButton" mnemonicParsing="false" text="Ребро"/>
            </Menu>
            <Menu mnemonicParsing="false" text = "Удалить">
                <MenuItem fx:id="deleteVertexButton" mnemonicParsing="false" text="Вершину"/>
                <MenuItem fx:id="deleteEdgeButton" mnemonicParsing="false" text="Ребро"/>
            </Menu>
            <Menu fx:id="startAlgorithmContainer" mnemonicParsing="false" text="Запустить алгоритм">
                <MenuItem fx:id="startByStep" mnemonicParsing="false" text="По шагам"/>
                <MenuItem fx:id="autoplay" mnemonicParsing="false" text="Автоматически"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Сохранить">
                <MenuItem fx:id="saveToFileButton" mnemonicParsing="false" text="В файл"/>
            </Menu>

        </MenuBar>
        <ScrollPane style="-fx-background-color: none;" fx:id="tableContainer" layoutX="580" layoutY="35" prefHeight="500" prefWidth="600">
        </ScrollPane>
        <TextField fx:id="currentOrder" layoutX="15" layoutY="555" prefHeight="25" prefWidth="580"/>
        <Label fx:id="currentActionLabel" layoutX="15" layoutY="600" prefHeight="25" prefWidth="200" style="-fx-font-weight: bold;"
               text="Текущее действие:"/>
        <TextField fx:id="currentAction" layoutX="15" layoutY="655"/>
        <Button disable="true" text="" fx:id="rect" layoutX="405.0" layoutY="630.0" prefHeight="53.0" prefWidth="53.0" style="-fx-shape: 'M32 32 L32 44 L42 38';-fx-background-color: green" />
        <Button disable="true" fx:id="rightButton" layoutX="492.0" layoutY="630.0" prefHeight="53.0" prefWidth="72.0" style= "-fx-background-color: #3F48CC;-fx-shape: 'M32 30 L32 34 L32 42 L42 36'"/>
        <Button disable="true" fx:id="leftButton" layoutX="305.0" layoutY="630.0" prefHeight="53.0" prefWidth="72.0" style="-fx-background-color: #3F48CC;-fx-shape: 'M32 30 L32 34 L32 42 L22 36'"/>

        <Label  fx:id="foundPathLabel" layoutX="660" layoutY="500" prefHeight="18" prefWidth="260" style="-fx-font-weight: bold;"
               text="Найденные пути"/>
        <ScrollPane  fx:id="foundPathScroll" layoutX="659" layoutY="537" prefHeight="195" prefWidth="378.0">
            <VBox prefHeight="190" prefWidth="355" fx:id="foundPathsContainer"/>
        </ScrollPane>
        <Label visible="false" fx:id="setGraphError" layoutX="500" layoutY="30" prefHeight="25" prefWidth="400" textFill="red" style="-fx-font-weight: bold;"
               text="Пожалуйста, выберите граф"/>
    </AnchorPane>
</AnchorPane>